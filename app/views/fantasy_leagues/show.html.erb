<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @fantasy_league.name %>
</p>

<p>
  <strong>Teams:</strong>
  <%= @fantasy_league.max_teams %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Abbrev</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @fantasy_league.teams.each do |fantasy_team| %>
        <tr>
          <td><%= link_to fantasy_team.name, fantasy_team %></td>
          <td><%= fantasy_team.abbrev %></td>
          <td><%= link_to 'Show', fantasy_team %></td>
          <td><%= link_to 'Edit', edit_fantasy_team_path(fantasy_team) %></td>
          <td><%= link_to 'Destroy', fantasy_team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</p>

<p>
  <strong>League:</strong>
  <%= @fantasy_league.league_id %>
</p>

<%= link_to 'Edit', edit_fantasy_league_path(@fantasy_league) %> |
<%= link_to 'Back', fantasy_leagues_path %>
