<h1>Api V1 Teams</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Full name</th>
      <th>Short name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @api_v1_teams.each do |api_v1_team| %>
      <tr>
        <td><%= api_v1_team.code %></td>
        <td><%= api_v1_team.full_name %></td>
        <td><%= api_v1_team.short_name %></td>
        <td><%= link_to 'Show', api_v1_team %></td>
        <td><%= link_to 'Edit', edit_api_v1_team_path(api_v1_team) %></td>
        <td><%= link_to 'Destroy', api_v1_team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

