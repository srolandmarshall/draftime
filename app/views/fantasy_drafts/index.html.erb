<p id="notice"><%= notice %></p>

<h1>Fantasy Drafts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Fantasy league</th>
      <th>Datetime</th>
      <th>Picks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fantasy_drafts.each do |fantasy_draft| %>
      <tr>
        <td><%= fantasy_draft.name %></td>
        <td><%= fantasy_draft.fantasy_league_id %></td>
        <td><%= fantasy_draft.datetime %></td>
        <td><%= fantasy_draft.picks %></td>
        <td><%= link_to 'Show', fantasy_draft %></td>
        <td><%= link_to 'Edit', edit_fantasy_draft_path(fantasy_draft) %></td>
        <td><%= link_to 'Destroy', fantasy_draft, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

